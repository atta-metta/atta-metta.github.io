{% assign reading_wpm = 200 %}
{% assign word_count = content | split: " " | size %}
{% assign reading_time_count = word_count | divided_by: reading_wpm %}
{% case reading_time_count %}
    {% when 0 %}
        {% assign reading_time = "less than a minute" %}
    {% when 1 %}
        {% assign reading_time = "about a minute" %}
    {% else %}
        {% assign reading_time = " minutes" | prepend: reading_time_count %}
{% endcase %}
